generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id            String    @id @default(cuid())
  code          String    @unique
  url           String
  clicks        Int       @default(0)
  createdAt     DateTime  @default(now())
  lastClickedAt DateTime?

  @@index([code])
  @@map("links")
}
